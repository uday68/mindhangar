# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ============================================
# AI Services
# ============================================
VITE_GEMINI_API_KEY=your_production_gemini_api_key_here
VITE_HUGGINGFACE_API_KEY=your_production_huggingface_api_key_here

# ============================================
# Backend API
# ============================================
VITE_API_URL=https://api.mindhangar.com
VITE_WS_URL=wss://api.mindhangar.com

# ============================================
# Authentication
# ============================================
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GITHUB_CLIENT_ID=your_github_client_id_here

# ============================================
# Search & Translation
# ============================================
VITE_GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
VITE_GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here
VITE_GOOGLE_TRANSLATE_API_KEY=your_translate_api_key_here

# ============================================
# Payment
# ============================================
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key_here
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here

# ============================================
# Analytics & Monitoring
# ============================================
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_SENTRY_DSN=your_sentry_dsn_here

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_SEMANTIC_SEARCH=false

# ============================================
# App Configuration
# ============================================
VITE_APP_NAME=MindHangar AI for Bharat
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production
