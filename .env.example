# MindHangar AI for Bharat - Environment Variables

# ==============================================
# AI & Language Services
# ==============================================

# Google Gemini API Key (Required)
# Get your key at: https://aistudio.google.com
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Configuration
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# ==============================================
# Database Configuration
# ==============================================

# SQLite Database Path
DATABASE_URL=./mindhangar-bharat.db

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# Payment Integration (Indian Gateways)
# ==============================================

# Razorpay (Primary Payment Gateway)
# Get credentials at: https://dashboard.razorpay.com
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Paytm Integration (Optional)
PAYTM_MERCHANT_ID=your_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_paytm_merchant_key

# PhonePe Integration (Optional)
PHONEPE_MERCHANT_ID=your_phonepe_merchant_id
PHONEPE_SALT_KEY=your_phonepe_salt_key

# ==============================================
# Feature Flags
# ==============================================

# Core Features
ENABLE_OFFLINE_MODE=true
ENABLE_LOW_BANDWIDTH_MODE=true
ENABLE_PWA=true

# Language Features
ENABLE_VOICE_INPUT=true
ENABLE_VOICE_OUTPUT=true
ENABLE_SCRIPT_CONVERSION=true

# Educational Features
ENABLE_CBSE_CONTENT=true
ENABLE_ICSE_CONTENT=true
ENABLE_STATE_BOARDS=true
ENABLE_JEE_PREP=true
ENABLE_NEET_PREP=true
ENABLE_UPSC_PREP=true

# Cultural Features
ENABLE_CULTURAL_FILTER=true
ENABLE_FESTIVAL_CALENDAR=true
ENABLE_REGIONAL_THEMES=true

# Advanced Features
ENABLE_PARENT_DASHBOARD=true
ENABLE_TEACHER_DASHBOARD=true
ENABLE_GOVERNMENT_INTEGRATION=false

# ==============================================
# Government Platform Integration
# ==============================================

# DIKSHA Platform
DIKSHA_API_KEY=your_diksha_api_key
DIKSHA_API_URL=https://diksha.gov.in/api

# SWAYAM Platform
SWAYAM_API_KEY=your_swayam_api_key
SWAYAM_API_URL=https://swayam.gov.in/api

# PM eVIDYA
PM_EVIDYA_API_KEY=your_pm_evidya_api_key

# ==============================================
# Performance & Optimization
# ==============================================

# Caching
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379

# CDN Configuration
CDN_URL=https://cdn.mindhangar.in
ENABLE_CDN=false

# Image Optimization
IMAGE_QUALITY=80
IMAGE_FORMAT=webp
ENABLE_LAZY_LOADING=true

# Bundle Optimization
ENABLE_CODE_SPLITTING=true
ENABLE_TREE_SHAKING=true

# ==============================================
# Network & Data Usage
# ==============================================

# Bandwidth Limits
MAX_DATA_USAGE_PER_HOUR_MB=20
LOW_BANDWIDTH_THRESHOLD_KBPS=500

# Network Timeouts
API_TIMEOUT_MS=10000
OFFLINE_TIMEOUT_MS=5000

# Compression
ENABLE_GZIP=true
ENABLE_BROTLI=true

# ==============================================
# Localization
# ==============================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=en,hi,ta,te,bn,mr,gu,kn

# Translation Service (Optional)
TRANSLATION_API_KEY=your_translation_api_key
TRANSLATION_API_URL=https://translation.googleapis.com/language/translate/v2

# ==============================================
# Analytics & Monitoring
# ==============================================

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id
ENABLE_ANALYTICS=false

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
ENABLE_ERROR_TRACKING=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# ==============================================
# Security
# ==============================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ENABLE_CORS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Development & Testing
# ==============================================

# Environment
NODE_ENV=development

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Testing
ENABLE_TEST_MODE=false
MOCK_API_RESPONSES=false

# ==============================================
# Email & Notifications
# ==============================================

# Email Service (for parent notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# SMS Service (for Indian mobile numbers)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=MNDHGR

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=true
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ==============================================
# Content Delivery
# ==============================================

# Video Hosting
VIDEO_CDN_URL=https://video.mindhangar.in
ENABLE_VIDEO_TRANSCODING=false

# File Storage
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE_MB=10

# ==============================================
# Regional Configuration
# ==============================================

# Default Region
DEFAULT_REGION=IN

# Timezone
DEFAULT_TIMEZONE=Asia/Kolkata

# Currency
DEFAULT_CURRENCY=INR

# ==============================================
# Educational Board Configuration
# ==============================================

# CBSE Configuration
CBSE_API_URL=https://cbse.gov.in/api
CBSE_SYLLABUS_VERSION=2024

# ICSE Configuration
ICSE_API_URL=https://cisce.org/api
ICSE_SYLLABUS_VERSION=2024

# State Boards
ENABLE_MAHARASHTRA_BOARD=true
ENABLE_TAMIL_NADU_BOARD=true
ENABLE_KARNATAKA_BOARD=true

# ==============================================
# Competitive Exam Configuration
# ==============================================

# JEE Configuration
JEE_EXAM_DATE=2026-04-15
JEE_SYLLABUS_VERSION=2024

# NEET Configuration
NEET_EXAM_DATE=2026-05-05
NEET_SYLLABUS_VERSION=2024

# UPSC Configuration
UPSC_PRELIMS_DATE=2026-06-07
UPSC_SYLLABUS_VERSION=2024

# ==============================================
# Mobile App Configuration
# ==============================================

# PWA Configuration
PWA_NAME=MindHangar AI for Bharat
PWA_SHORT_NAME=MindHangar
PWA_THEME_COLOR=#ff9933
PWA_BACKGROUND_COLOR=#ffffff

# App Store Links
ANDROID_APP_URL=https://play.google.com/store/apps/details?id=com.mindhangar.bharat
IOS_APP_URL=https://apps.apple.com/app/mindhangar-bharat/id123456789

# ==============================================
# Social Media & Marketing
# ==============================================

# Social Media Links
FACEBOOK_URL=https://facebook.com/mindhangar
TWITTER_URL=https://twitter.com/mindhangar
INSTAGRAM_URL=https://instagram.com/mindhangar
YOUTUBE_URL=https://youtube.com/@mindhangar

# Support
SUPPORT_EMAIL=support@mindhangar.in
SUPPORT_PHONE=+91-1234567890

# ==============================================
# Legal & Compliance
# ==============================================

# Privacy Policy
PRIVACY_POLICY_URL=https://mindhangar.in/privacy
TERMS_OF_SERVICE_URL=https://mindhangar.in/terms

# Data Protection
ENABLE_GDPR_COMPLIANCE=true
ENABLE_DATA_ENCRYPTION=true
DATA_RETENTION_DAYS=365

# ==============================================
# Notes for Developers
# ==============================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep sensitive keys secure
# 4. Use different values for development, staging, and production
# 5. Test with feature flags before enabling in production
# 6. Consult CONTRIBUTING.md for setup instructions

# ==============================================
# Quick Start Commands
# ==============================================

# Development:
#   npm run dev

# Production Build:
#   npm run build

# Run Tests:
#   npm run test

# Database Setup:
#   npm run db:generate
#   npm run db:migrate

# ==============================================